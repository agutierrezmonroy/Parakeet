<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006892"
    android:padding="16dp">

    <TextView
        android:id="@+id/generalInfoTitleTextView"
        android:text="@string/general_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fishRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/fish_recycler_item"
        android:layout_weight="1" />

    <Button
        android:id="@+id/giReturnToHubButton"
        android:text="@string/return_to_welcome_hub"
        android:backgroundTint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="15dp" />

</LinearLayout>